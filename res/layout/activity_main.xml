<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75ecfd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.TugasAkhir.pakaianadatindonesia.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#75ecfd"
                android:scaleType="fitXY"
                android:src="@drawable/logohome" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pakaian Adat"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDONESIA"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32dp" />

            <Button
                android:id="@+id/btnadat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#75ecfd"
                android:onClick="OpenAdat"
                android:text="Adat" />

            <Button
                android:id="@+id/btnNonadat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#75ecfd"
                android:onClick="OpenNonAdat"
                android:text="Non-Adat" />

            <Button
                android:id="@+id/btntentang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#75ecfd"
                android:onClick="OpenTentang"
                android:text="Tentang" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
